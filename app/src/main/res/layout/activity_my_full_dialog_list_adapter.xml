<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:background="@drawable/right_dialog"
            android:textSize="16sp"
            android:maxWidth="350dp"
            android:textColor="@color/colorDark"
            android:paddingVertical="7dp"
            android:paddingHorizontal="13dp"

            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewMessageRight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:background="@drawable/left_dialog"
            android:textSize="16sp"
            android:maxWidth="350dp"
            android:textColor="@color/colorDark"
            android:paddingVertical="7dp"
            android:paddingHorizontal="13dp"

            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMessageLeft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>