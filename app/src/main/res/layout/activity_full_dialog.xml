<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayMessages.FullDialog.FullDialog"


>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/full_message_tool_bar"
            app:layout_collapseMode="pin"
            style="@style/MyToolBar"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
            android:elevation="1dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="right"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="@+id/full_message_tool_bar"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/full_dialog_photo"/>
    </androidx.appcompat.widget.Toolbar>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_frame"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="Сообщение"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/input_text_message"/>
    <ImageButton
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_send"
            android:background="@null"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:id="@+id/button_send_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

    />
    <ListView

            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:dividerHeight="0dp"
            android:background="@color/colorWhite"
            android:divider="@color/colorWhite"
            android:stackFromBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:isScrollContainer="false"
            app:layout_constraintBottom_toTopOf="@+id/input_text_message" android:id="@+id/list_view_messages"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/full_message_tool_bar" app:layout_constraintVertical_bias="1.0"
    />

</androidx.constraintlayout.widget.ConstraintLayout>